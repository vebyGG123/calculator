
<Calculator>:
	uzmenenia_label: mdlabel


	MDBoxLayout:
		orientation: 'vertical'
		size: root.width, root.height

		MDTopAppBar:
			title: "Калькулятор"
			elevation: 3
			left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
			
			
		MDLabel:
			id: mdlabel
			text: "0"
			halign: "center"
			theme_text_color: "ContrastParentBackground"
			font_size: 40

		
		MDGridLayout:
			cols: 4
			rows: 8
			

			MDRoundFlatIconButton:
			    icon: "language-python"
			    text: "0"
			    size_hint: root.width, root.height

			    font_size: 20
			    text_color: 0, 0, 0, 1
			    on_release: root.button_0()

			MDRoundFlatIconButton:
			    icon: "language-python"
			    text: "1"
			    size_hint: root.width, root.height

			    font_size: 20
			    text_color: 0, 0, 0, 1
			    on_release: root.button_1()


